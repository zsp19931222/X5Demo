<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/button"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
         android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/home_message_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_switch_white_tl_bl_corners3dp_pressed"
            android:gravity="center"
             android:padding="@dimen/d_5"
            android:text="消息"
            android:textColor="#393939"
            android:textSize="15sp" />

        <Button
            android:id="@+id/home_message_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_switch_white_tr_br_corners3dp_nopress"
            android:gravity="center"
            android:text="通讯录"
             android:padding="@dimen/d_5"
            android:textColor="#d0d0d0"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>