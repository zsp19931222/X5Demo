<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/d_10"
            android:background="@drawable/shape_radius_border_transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_kechengqiandao"
                android:layout_width="@dimen/d_70"
                android:layout_height="@dimen/d_30"
                android:layout_margin="@dimen/d_0.5"
                android:layout_marginEnd="@dimen/d_0.5"
                android:background="@drawable/shape_radius_border_left_white"
                android:gravity="center"
                android:text="课程签到" />

            <TextView
                android:id="@+id/txt_qiandaobaogao"
                android:layout_width="@dimen/d_70"
                android:layout_height="@dimen/d_30"
                android:layout_margin="@dimen/d_0.5"
                android:layout_marginStart="@dimen/d_0.5"
                android:gravity="center"
                android:text="签到报告"
                android:textColor="@color/color_white" />
        </LinearLayout>

        
    </RelativeLayout>

     <FrameLayout
        android:id="@+id/fl_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>